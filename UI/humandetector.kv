#:kivy 2.0.0
#:import Factory kivy.factory.Factory
#:import MDTabs kivym d.uix.tab.MDTabs
#:import MDTabsBase kivymd.uix.tab.MDTabsBase

<LiveTab>:
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_dark
        Rectangle:
            pos: self.pos
            size: self.size

<VideoTab>:
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_dark
        Rectangle:
            pos: self.pos
            size: self.size

<ImageTab>:
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_dark
        Rectangle:
            pos: self.pos
            size: self.size

<HumanDetectorApp>:
    MDBoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: app.theme_cls.bg_darkest
            Rectangle:
                pos: self.pos
                size: self.size
        MDTabs:
            id: tabs
            background_color: app.theme_cls.primary_color
            text_color_active: 1, 1, 1, 1
            text_color: 0.7, 0.7, 0.7, 1
            LiveTab:
                title: "Live"
            VideoTab:
                title: "Video"
            ImageTab:
                title: "Image"